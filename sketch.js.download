var ship , ship1;
var sea  , sea1;

function preload(){
ship1=loadAnimation("ship-1.png", "ship-2.png", "ship-3.png", "ship-4.png");
  sea1=loadAnimation("sea.png");
}

function setup(){
  createCanvas(400,400);
  
  //create the sea
  sea = createSprite(400,400) ;
  sea.addAnimation("runing",sea1)
  sea.scale=0.5
sea.velocityX=-1;

//create ship
ship = createSprite(50,200,20,50);
ship.addAnimation("runing",ship);
edges = createEdgeSprite();

//adding scale and position to ship
ship.scale=0.25;
ship.x =  90;
ship.y = 300;

}

function draw() {
  background("sea.png");
  if(keyDown("enter")){
    ship.velocityX= 5;
  }
  
  if(keyDown("Left")){
    ship.velocityX= -5;
  }

  if(keyDown("space")){
    ship.velocityX= 0;
  }

  if (sea.x < 0 ){
    sea.x = sea.width/2;
  }
 drawSprites();
}